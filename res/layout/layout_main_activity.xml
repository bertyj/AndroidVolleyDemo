<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/button_get_string_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/test_get_string_request" />

    <Button
        android:id="@+id/button_post_string_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/test_post_string_request" />

    <Button
        android:id="@+id/button_json_object_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/test_json_object_request" />

</LinearLayout>